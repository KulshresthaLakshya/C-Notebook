#include<stdio.h>

int main()
{
    int i = 6, j = 1;
    char c = 'A'; 

    for(i = 6; i > 0; i--) 
    {
        for(j = 1; j <= i; j++)
        printf("%c", c++);
        printf("\n");
    }

    for(i = 2; i <= 4; i++)
    {
        for(j = 1; j <= i; j++)
            printf("%c", c++);
        printf("\n");
    }
    return 0;
}
